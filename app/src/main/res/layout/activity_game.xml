                 android:layout_height="100dp">
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c5" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c6" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c7" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c8" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
             </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c9" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c10" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c11" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c12" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
    </LinearLayout>
