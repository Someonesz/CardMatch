            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c14" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
            <top.someones.cardmatch.ui.MyViewSwitcher android:id="@+id/c15" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />
