<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.someones.cardmatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardMatch">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.A"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.workshop.SearchResultActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".ui.game.GameActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".ui.workshop.WorkShopActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".ui.workshop.ModInfoActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/Theme.Default" />
    </application>

</manifest>